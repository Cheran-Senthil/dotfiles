# basics
ctrl - return : iTerm2
ctrl - h : focus_window west
ctrl - j : focus_window south
ctrl - k : focus_window north
ctrl - l : focus_window east

# moving window
ctrl + shift - h : move_window west
ctrl + shift - j : move_window south
ctrl + shift - k : move_window north
ctrl + shift - l : move_window east

# toggle fullscreen
ctrl + shift - f : yabai -m window --toggle native-fullscreen

# toggle floating
ctrl + shift - space : yabai -m window --toggle float;\
          yabai -m window --grid 4:4:1:1:2:2

# switch to another workspace
ctrl - 1 : yabai -m space --focus 1
ctrl - 2 : yabai -m space --focus 2
ctrl - 3 : yabai -m space --focus 3
ctrl - 4 : yabai -m space --focus 4
ctrl - 5 : yabai -m space --focus 5
ctrl - 6 : yabai -m space --focus 6
ctrl - 7 : yabai -m space --focus 7
ctrl - 8 : yabai -m space --focus 8
ctrl - 9 : yabai -m space --focus 9
ctrl - 0 : yabai -m space --focus 10

# move a window to another workspace
ctrl + shift - 1 : yabai -m window --space 1
ctrl + shift - 2 : yabai -m window --space 2
ctrl + shift - 3 : yabai -m window --space 3
ctrl + shift - 4 : yabai -m window --space 4
ctrl + shift - 5 : yabai -m window --space 5
ctrl + shift - 6 : yabai -m window --space 6
ctrl + shift - 7 : yabai -m window --space 7
ctrl + shift - 8 : yabai -m window --space 8
ctrl + shift - 9 : yabai -m window --space 9
ctrl + shift - 0 : yabai -m window --space 10

# open launchpad
ctrl + shift - d : open -na /System/Applications/Launchpad.app

# kill a window
ctrl + shift - q : yabai -m window --close

# # resize mode
# :: default
# :: resize @
# ctrl - r; resize
# resize < escape ; default
# resize < return ; default
# resize < h : yabai -m window --resize left:-10:0
# resize < j : yabai -m window --resize top:0:10
# resize < k : yabai -m window --resize top:0:-10
# resize < l : yabai -m window --resize left:10:0

# restart yabai
ctrl + shift - r : launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"
